    <section id="card-big">
            <h1><strong>Add Your Profile</strong> </h1>
          <form class="form-edit-card" action="/doctorprofileadd" method="post">

            <div class="row row1">

              <div class="col-sm-4">

                <!-- <input type="text" name="uname" value="" placeholder="User Name"  required> <br> -->
                <input onkeydown="return /[a-zA-Z]/i.test(event.key)" type="text" name="name" value="" placeholder="Name" required> <br>
                <input type="radio" id="male" name="gender" value="Male" required><label for="male">Male</label>
                <input type="radio" id="female" name="gender" value="Female" required><label for="female">Female</label>
                <input type="radio" id="others" name="gender" value="Others" required><label for="others">Others</label>
                    <input class="inputs" type="number" name="age" value="" placeholder="Age" required>
                <input onkeydown="return /[a-zA-Z]/i.test(event.key)" class="inputs" type="text" name="qualifications" value="" placeholder="Qualifications" required> <br>
                  <input onkeydown="return /[a-zA-Z]/i.test(event.key)" class="inputs" type="text" name="specialization" value="" placeholder="Specialization" required> <br>


              </div>
              <div class="col-sm-4">

                <input type="number" name="yearofexp" value="" placeholder="Year Of Experience" required> <br>
                          <input type="text" name="place" value="" placeholder="Place" required> <br>
                <input onkeydown="return /[a-zA-Z]/i.test(event.key)" type="text" name="hospitalName" value="" placeholder="Hospital Name" required> <br>
                <input onkeydown="return /[a-zA-Z]/i.test(event.key)" type="text" name="hospitalPlace" value="" placeholder="Hospital Place" required> <br>
                  <input onkeydown="return /[a-zA-Z]/i.test(event.key)" type="text" name="hospitalCity" value="" placeholder="Hospital City" required> <br>

              </div>
              <div class="col-sm-4">

                <input type="text" name="dates" value="" placeholder="yyyy-mm-dd..." required> <br>
                   <input type="text" name="days" value="" placeholder="Days" required> <br>


                        <input type="text" name="startTime" value="" placeholder="From (hh:mm am)" required> <br>

                        <input type="text" name="endTime" value="" placeholder="To (hh:mm pm)" required> <br>


                           <button class="btn btn-light btn-save-profile" type="submit" name="button">Add Profile</button> <br>
              </div>
            </div>
            </form/

    </section>



